import java.util.Arrays;
import java.util.Scanner;
import java.util.ArrayList;
import java.util.Collections;

public class Main{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		int K = sc.nextInt();
		int[] input = new int[N];
		ArrayList<Double> result = new ArrayList<Double>();
		
		for(int i=0; i<N; i++) {
			input[i] = sc.nextInt();
		}
		
		for(int i=0; i<N; i++) {
			for(int j=0; j<N; j++) {
				if(j-i+1>=K) {
					double sum1 = 0d;
					double sum2 = 0d;
					
					for(int k=i; k<=j; k++) {
						sum1 += input[k];
					}
					double m = sum1/(j-i+1); //평균
					
					for(int k=i; k<=j; k++) {
						sum2 += (input[k]-m)*(input[k]-m);
					}
					double v = sum2/(j-i+1); //분산
					
					double sd = Math.sqrt(v); //표준편차
					result.add(sd);
				}	
			}
		}
		System.out.println(Collections.min(result));
	}
}